    ViewData["Title"] = "Create";
}
    <head>
        <link rel="stylesheet" href="assets/css/font-awesome.min.css">
        <link href="~/courseware/assets/css/font-awesome.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="assets/css/simple-line-icons.css">
        <link href="~/courseware/assets/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/magnific-popup.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/responsive.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/selectric.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/simple-line-icons.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/style.css" rel="stylesheet" />
        <link href="~/courseware/assets/css/timeTo.css" rel="stylesheet" />
