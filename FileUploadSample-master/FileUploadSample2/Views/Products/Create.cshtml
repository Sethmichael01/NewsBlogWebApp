        <!-- Import Bootstrap CSS File -->

        <link rel="stylesheet" href="assets/css/bootstrap.min.css">

        <!-- Import External CSS Files -->

        <link rel="stylesheet" href="assets/css/owl.carousel.min.css">
        <link rel="stylesheet" href="assets/css/magnific-popup.css">

        <!-- Import Template's CSS Files -->

        <link rel="stylesheet" href="assets/css/style.css">
        <link rel="stylesheet" href="assets/css/responsive.css">
    </head>
<hr />
<body style="background-color:black">
    <section class="blog-posts">
        <div class="section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-12" style="background-color:ghostwhite">
                            <article style="text-align:center" class="post type-post format-slider">
                                <div class="entry-content media">
                                    <div class="content-details media-body">
                                        <br />
                                        <div class="container">
                                                <div class="col-md-12">
                                                    <form style="text-align:center" asp-action="Create" enctype="multipart/form-data">
                                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                        <div class="form-group">
                                                            <label asp-for="Title" class="control-label"></label>
                                                            <input asp-for="Title" class="form-control" />
                                                            <span asp-validation-for="Title" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Description" class="control-label"></label>
                                                            <textarea style="height:80px" asp-for="Description" class="form-control"></textarea>
                                                            <span asp-validation-for="Description" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Author" class="control-label"></label>
                                                            <input asp-for="Author" class="form-control" />
                                                            <span asp-validation-for="Author" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="ProductPicture" class="control-label"></label>
                                                            <input asp-for="File" type="file" accept="image/*">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="submit" value="Create" class="btn btn-lg" />
                                                        </div>
                                                    </form>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                    </div>
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.section-padding -->
    </section><!-- /.blog-posts -->




    <script src="~/courseware/assets/js/jquery.selectric.js"></script>
    <script src="~/courseware/assets/js/jquery-ui.min.js"></script>
    <script src="~/courseware/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/courseware/assets/js/main.js"></script>
    <script src="~/courseware/assets/js/plugins.js"></script>
</body>











